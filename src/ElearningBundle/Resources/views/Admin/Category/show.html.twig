{% extends '::base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table class="record_properties table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ category.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ category.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('category') }}" class="btn btn-default">
        Back to the list
    </a>
    <a href="{{ path('category_edit', { id: category.id }) }}" class="btn btn-default">
        Edit
    </a>
    <a href="{{ path('category_delete', {id: category.id}) }}" class="btn btn-default" onclick="return confirm('Are you sure?')">
        Delete
    </a>
{% endblock %}
